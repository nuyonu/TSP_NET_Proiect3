@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex flex-column align-items-center justify-content-center">
    <h1 style="color: #329696">Best for videos and photos management</h1>
    <div class="d-flex flex-column align-items-center justify-content-center border w-100 shadow-lg p-3 mb-5 rounded">
        <h3 class="border-bottom" style="color: #46aac8">Statistics</h3>
        <h4>@Html.DisplayFor(model => model.TotalMediaFromBegin)</h4>
        <h4>@Html.DisplayFor(model => model.TotalMediaNow)</h4>
        <h4>@Html.DisplayFor(model => model.TotalVideos)</h4>
        <h4>@Html.DisplayFor(model => model.TotalPhotos)</h4>
        <h4 class="w-100 border-bottom d-flex pb-2 flex-row justify-content-center">Total media deleted: 10</h4>
        <div class="w-100 border-bottom"></div>
    </div>
</div>